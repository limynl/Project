<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_message_head"
                    android:layout_marginTop="0dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/logo"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#424242"
                        android:text="昵称" />

                    <EditText
                        android:id="@+id/user_message_nick"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_login2"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:hint="请填写"
                        android:textColorHint="#A3A3A3"
                        android:textColor="#A3A3A3"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0"/>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:text="性别" />

                    <RelativeLayout
                        android:id="@+id/user_gender_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/user_message_gender"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_width="190dp"
                            android:layout_height="40dp"
                            android:textColor="#A3A3A3"
                            android:textSize="16sp"
                            android:text="请选择"
                            android:gravity="center_vertical"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_open"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="18dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:text="电话" />

                    <EditText
                        android:id="@+id/user_phone"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_login2"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="11"
                        android:hint="请填写"
                        android:textColorHint="#A3A3A3"
                        android:textColor="#A3A3A3"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="#424242"
                        android:text="年龄" />

                    <EditText
                        android:id="@+id/user_message_age"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_login2"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:hint="请填写"
                        android:textColorHint="#A3A3A3"
                        android:textColor="#A3A3A3"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/id_update_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_state_2_selector"
        android:text="更新"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_text_size" />

</LinearLayout>